---
import Spinner from "../components/Spinner.astro";
import Layout from "../layouts/Layout.astro";
import "bootstrap/dist/css/bootstrap.min.css";
---

<Layout>
    <Spinner />
    <div
        class="container vh-100 d-flex justify-content-center align-items-center"
    >
        <div class="py-3" id="confirmar-asistencia">
            <div class="container">
                <div class="row align-items-center">
                    <div class="card p-4 text-center">
                        <h2 class="mb-3">Confirmar asistencia</h2>
                        <p class="text-muted">
                            Por favor, confirma tu asistencia antes del
                        </p>
                        <p class="text-muted">1 de Mayo</p>
                        <ul class="list-group mb-3" id="guest-list"></ul>
                        <br />
                        <div class="col-md-5 text-center">
                            <button class="btn-ubicacion" id="btn-confirmar"
                                >Confirmar</button
                            >
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</Layout>
<script>
    document.addEventListener("DOMContentLoaded", async () => {
        const params = new URLSearchParams(window.location.search);
        const loadingModal = new bootstrap.Modal(
            document.getElementById("loadingModal"),
        );
        const id = params.get("id");

        try {
            const response = await fetch(
                `https://my-wedding-back.onrender.com/api/v1/invitation?id=${id}`,
            );
            if (response.ok) {
                const data = await response.json();
                const guests = data.guests;

                const guestList = document.getElementById("guest-list");

                guests.forEach((guest: string) => {
                    const li = document.createElement("li");
                    li.className =
                        "list-group-item d-flex justify-content-between align-items-center";
                    li.innerHTML = `
                        ${guest}
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" id="switch-${guest}">
                        </div>
                    `;
                    guestList?.appendChild(li);
                });

                document
                    .getElementById("btn-confirmar")
                    ?.addEventListener("click", async () => {
                        loadingModal.show();

                        const willAttend = guests.map((guest: string) => {
                            const checkbox = document.getElementById(
                                `switch-${guest}`,
                            ) as HTMLInputElement;
                            return {
                                name: guest,
                                willAttend: checkbox?.checked ?? false,
                            };
                        });

                        try {
                            const postResponse = await fetch(
                                "https://my-wedding-back.onrender.com/api/v1/attendance",
                                {
                                    method: "POST",
                                    headers: {
                                        "Content-Type": "application/json",
                                    },
                                    body: JSON.stringify({
                                        invitationId: id,
                                        guestConfirmations: willAttend,
                                    }),
                                },
                            );

                            if (postResponse.ok) {
                                window.location.href = `/countdown?id=${id}`;
                            } else {
                                console.error(
                                    "Error al registrar asistencia:",
                                    await postResponse.text(),
                                );
                            }
                        } catch (error) {
                            console.error(
                                "Error de red al enviar los datos:",
                                error,
                            );
                        }
                    });
            }
        } catch (error) {
            console.error("Error al obtener la invitaci√≥n:", error);
        } finally {
            loadingModal.hide();
        }
    });
</script>

<style>
    html,
    body {
        height: 100%;
        overflow: hidden;
        margin: 0;
        padding: 0;
        background-image: url("/images/bg.png");
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
    }

    .card {
        max-width: 400px;
        background: rgba(255, 255, 255, 0.9);
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .btn-ubicacion {
        font-family: "BookAntiqua-Bold", sans-serif;
        font-size: 1rem;
        padding: 8px 15px;
        border: 2px solid #000;
        background: transparent;
        border-radius: 20px;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .btn-ubicacion:hover {
        background: #d4af37;
        color: white;
        border-color: #d4af37;
    }
</style>
